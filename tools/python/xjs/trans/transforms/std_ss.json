{
    "$schema": "http://mgi.nist.gov/mgi-json-trans/v0.1",
    "templates": {
        "$lb": {
            "$extensionSchemas": [ "http://mgi.nist.gov/mgi-json-trans/v0.1#/definitions/LiteralTransform" ],
            "type": "literal",
            "value": "{",
            "expects": ["any"],
            "returns": "string"
        },
        "$rb": {
            "$extensionSchemas": [ "http://mgi.nist.gov/mgi-json-trans/v0.1#/definitions/LiteralTransform" ],
            "type": "literal",
            "value": "}",
            "expects": ["any"],
            "returns": "string"
        }
    },
    "transforms": {
        "apply": {
            "type": "function",
            "name": "$std.applytransform",
            "argdesc": [ 
                "str: transform name", 
                "str: pointer to data to use as new input",
                "...: args to pass to transform" 
            ],
            "expects": ["any"],
            "returns": "any"
        },
        "extract": {
            "type": "function",
            "name": "$std.extract",
            "argdesc": [ "str: pointer to data to extract" ],
            "expects": ["any"],
            "returns": "any"
        },
        "wrap": {
            "type": "function",
            "name": "$std.wrap",
            "description": "break text into an array of lines of limited length",
            "argdesc": [ "int: maximum length of each line" ],
            "expects": ["string"],
            "returns": "array"
        },
        "fill": {
            "type": "chain",
            "status": "disabled",
            "steps": [
                "wrap({0})", "newline"
            ],
            "argdesc": [ "int: maximum length of each line" ],
            "expects": ["string"],
            "returns": "string"
        }
    }, 
    "joins": {
        "concat": {
            "type": "function",
            "name": "$std.delim",
            "args": [""],
            "expects": ["array"],
            "returns": "string"
        },
        "delim": {
            "type": "function",
            "name": "$std.delim",
            "argdesc": ["str: delimiting string"],
            "expects": ["array"],
            "returns": "string"
        },
        "newline": {
            "type": "function",
            "name": "$std.delimit",
            "description": "places each item on a different line",
            "args": [ "\n" ],
            "expects": ["array"],
            "returns": "string"
        },
        "doubleNewline": {
            "type": "function",
            "name": "$std.delimit",
            "description": "places a blank line between each item",
            "args": [ "\n\n" ],
            "expects": ["array"],
            "returns": "string"
        }
    }
}
